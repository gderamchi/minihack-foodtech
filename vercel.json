{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/weekly-menu/generate",
      "destination": "/api/weekly-menu/generate"
    },
    {
      "source": "/api/weekly-menu/current",
      "destination": "/api/weekly-menu/current"
    },
    {
      "source": "/api/weekly-menu/swap-meal",
      "destination": "/api/weekly-menu/swap-meal"
    },
    {
      "source": "/api/weekly-menu/shopping-list",
      "destination": "/api/weekly-menu/shopping-list"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
