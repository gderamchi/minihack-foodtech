{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/users/create-or-update", "destination": "/api/users" },
    { "source": "/api/users/profile", "destination": "/api/users" },
    { "source": "/api/users/update-profile", "destination": "/api/users" },
    { "source": "/api/users/onboarding", "destination": "/api/users" },
    { "source": "/api/users/delete-account", "destination": "/api/users" }
  ]
}
